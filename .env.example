# Service wallet private key (hex) — owns the demo plants, receives x402 payments
SERVICE_PRIVATE_KEY=your_hex_private_key_here

# Agent wallet private key (hex) — separate wallet that pays x402 to water plants
AGENT_PRIVATE_KEY=your_agent_hex_private_key_here

# Server port
PORT=3402

# Facilitator URL for x402 payment settlement
FACILITATOR_URL=https://x402-facilitator-open.onrender.com

# Demo plant token IDs (set after running mint-demo script)
DEMO_PLANT_IDS=101,102,103
